<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<%= link_to "New task", new_task_path %>

<table id="tasks">
  <thead>
    <tr>
      <th>Title</th>
      <th>Descriptoin</th>
      <th>Completed</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td>
          <%= link_to "Show this task", task %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
